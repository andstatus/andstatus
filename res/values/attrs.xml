<resources>
	<declare-styleable name="StyledAttributes">
		<attr name="messageUsernameAppearance" format="reference" />
		<attr name="messageUsernameColor" format="reference|color" />
		<attr name="messageUsernameStyle">
			<flag name="normal" value="0"/>
			<flag name="bold" value="1"/>
			<flag name="italic" value="2"/>
		</attr>

		<attr name="messageBodyAppearance" format="reference" />
		<attr name="messageBodyColor" format="reference|color" />
		<attr name="messageBodyStyle">
			<flag name="normal" value="0"/>
			<flag name="bold" value="1"/>
			<flag name="italic" value="2"/>
		</attr>

		<attr name="messageDetailsAppearance" format="reference" />
		<attr name="messageDetailsColor" format="reference|color" />
		<attr name="messageDetailsStyle">
			<flag name="normal" value="0"/>
			<flag name="bold" value="1"/>
			<flag name="italic" value="2"/>
		</attr>

		<attr name="textEditColor" format="reference|color" />
		
		<attr name="myActionOverflowButtonStyle" format="reference" />

		<!-- Reference to a styled drawable, see  
 http://stackoverflow.com/questions/8041537/how-to-reference-style-attributes-from-a-drawable/13471695
		-->
        <attr name="attachIcon" format="reference" />
        <attr name="postMessageIcon" format="reference" />
        <attr name="hideMessageIcon" format="reference" />
        <attr name="replyBackground" format="reference" />
        <attr name="searchIcon" format="reference" />
        <attr name="globalSearchIcon" format="reference" />
        <attr name="sendIcon" format="reference" />
    </declare-styleable>
</resources>
