<resources>
    <string-array name="theme_color_values">
        <item>DeviceDefault</item>
        <item>Light</item>
        <item>Dark</item>
    </string-array>
    <string-array name="theme_size_values">
        <item>Small</item>
        <item>StandardSize</item>
        <item>Large</item>
    </string-array>
    
    <!-- ThemeSelector resolves to different themes depending on configuration (see styles.xml files)
    Groups of the Themes below SHOULD be the same in everything but parent Theme -->
	<style name="Theme.Dark.AndStatus.StandardSize" parent="@style/DarkThemeSelector">
		<item name="messageUsernameAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageUsernameColor">?android:attr/textColorSecondary</item>
		<item name="messageUsernameStyle">bold</item>

		<item name="messageBodyAppearance">?android:attr/textAppearanceMedium</item>
		<item name="messageBodyColor">?android:attr/textColorPrimaryNoDisable</item>
		<item name="messageBodyStyle">normal</item>

		<item name="messageDetailsAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageDetailsColor">?android:attr/textColorTertiary</item>
        <item name="messageDetailsStyle">italic</item>

        <item name="myActionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>

        <item name="attachIcon">@drawable/ic_action_new_attachment</item>
        <item name="postMessageIcon">@drawable/ic_action_new</item>
        <item name="replyBackground">@drawable/reply_timeline_background</item>
        <item name="globalSearchIcon">@drawable/ic_action_global_search</item>
        <item name="searchIcon">@drawable/ic_action_search</item>
        <item name="sendIcon">@drawable/ic_action_send_now</item>
    </style>
	<style name="Theme.Light.AndStatus.StandardSize" parent="@style/LightThemeSelector">
		<item name="messageUsernameAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageUsernameColor">?android:attr/textColorSecondary</item>
		<item name="messageUsernameStyle">bold</item>

		<item name="messageBodyAppearance">?android:attr/textAppearanceMedium</item>
		<item name="messageBodyColor">?android:attr/textColorPrimaryNoDisable</item>
		<item name="messageBodyStyle">normal</item>

		<item name="messageDetailsAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageDetailsColor">?android:attr/textColorTertiary</item>
		<item name="messageDetailsStyle">italic</item>
				
        <item name="myActionOverflowButtonStyle">@android:style/Widget.Holo.Light.ActionButton.Overflow</item>

        <item name="attachIcon">@drawable/ic_action_new_attachment_light</item>
        <item name="postMessageIcon">@drawable/ic_action_new_light</item>
        <item name="replyBackground">@drawable/reply_timeline_background_light</item>
        <item name="globalSearchIcon">@drawable/ic_action_global_search_light</item>
        <item name="searchIcon">@drawable/ic_action_search_light</item>
        <item name="sendIcon">@drawable/ic_action_send_now_light</item>
    </style>
	<style name="Theme.DeviceDefault.AndStatus.StandardSize" parent="@style/DeviceDefaultThemeSelector">
		<item name="messageUsernameAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageUsernameColor">?android:attr/textColorSecondary</item>
		<item name="messageUsernameStyle">bold</item>

		<item name="messageBodyAppearance">?android:attr/textAppearanceMedium</item>
		<item name="messageBodyColor">?android:attr/textColorPrimaryNoDisable</item>
		<item name="messageBodyStyle">normal</item>

		<item name="messageDetailsAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageDetailsColor">?android:attr/textColorTertiary</item>
		<item name="messageDetailsStyle">italic</item>

        <item name="myActionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        
        <!-- To try this for the later SDK versions:
        <item name="myActionOverflowButtonStyle">?android:attr/actionOverflowButtonStyle</item>
        <item name="myActionOverflowButtonStyle">@android:style/Widget.ActionButton.Overflow</item>
        <item name="myActionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="myActionOverflowButtonStyle">@android:style/Widget.Holo.Light.ActionButton.Overflow</item>
        -->

        <item name="attachIcon">@drawable/ic_action_new_attachment</item>
        <item name="postMessageIcon">@drawable/ic_action_new</item>
        <item name="replyBackground">@drawable/reply_timeline_background</item>
        <item name="globalSearchIcon">@drawable/ic_action_global_search</item>
        <item name="searchIcon">@drawable/ic_action_search</item>
        <item name="sendIcon">@drawable/ic_action_send_now</item>
    </style>
    
	<style name="Theme.Dark.AndStatus.Small" parent="@style/Theme.Dark.AndStatus.StandardSize">
		<item name="messageUsernameAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageBodyAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageDetailsAppearance">?android:attr/textAppearanceSmall</item>
	</style>
	<style name="Theme.Light.AndStatus.Small" parent="@style/Theme.Light.AndStatus.StandardSize">
		<item name="messageUsernameAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageBodyAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageDetailsAppearance">?android:attr/textAppearanceSmall</item>
	</style>
	<style name="Theme.DeviceDefault.AndStatus.Small" parent="@style/Theme.DeviceDefault.AndStatus.StandardSize">
		<item name="messageUsernameAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageBodyAppearance">?android:attr/textAppearanceSmall</item>
		<item name="messageDetailsAppearance">?android:attr/textAppearanceSmall</item>
	</style>
		
	<style name="Theme.Dark.AndStatus.Large" parent="@style/Theme.Dark.AndStatus.StandardSize">
		<item name="messageUsernameAppearance">?android:attr/textAppearanceMedium</item>
		<item name="messageBodyAppearance">?android:attr/textAppearanceLarge</item>
		<item name="messageDetailsAppearance">?android:attr/textAppearanceSmall</item>
	</style>
	<style name="Theme.Light.AndStatus.Large" parent="@style/Theme.Light.AndStatus.StandardSize">
		<item name="messageUsernameAppearance">?android:attr/textAppearanceMedium</item>
		<item name="messageBodyAppearance">?android:attr/textAppearanceLarge</item>
		<item name="messageDetailsAppearance">?android:attr/textAppearanceSmall</item>
	</style>
	<style name="Theme.DeviceDefault.AndStatus.Large" parent="@style/Theme.DeviceDefault.AndStatus.StandardSize">
		<item name="messageUsernameAppearance">?android:attr/textAppearanceMedium</item>
		<item name="messageBodyAppearance">?android:attr/textAppearanceLarge</item>
		<item name="messageDetailsAppearance">?android:attr/textAppearanceSmall</item>
	</style>
</resources>