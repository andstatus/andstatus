<resources>
    <string-array name="theme_color_values">
        <item>Dark</item>
        <item>Light</item>
        <item>DeviceDefault</item>
    </string-array>

    <style name="Theme.AndStatus.Min.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="textColorLink">@color/link_text_light</item>
        <item name="dividerColor">@color/grey_700</item>

        <item name="replyBackground">@drawable/reply_timeline_background</item>
        <item name="msgCountIcon">@drawable/ic_message_white_24dp</item>
        <item name="followingCountIcon">@drawable/ic_person_white_24dp</item>
        <item name="followersCountIcon">@drawable/ic_people_white_24dp</item>
        <item name="favoriteIcon">@drawable/ic_favorite_white_24dp</item>

        <item name="replyIcon">@drawable/ic_reply_white_24dp</item>
        <item name="reblogIcon">@drawable/ic_repeat_white_24dp</item>
        <item name="favoriteBorderIcon">@drawable/ic_favorite_border_white_24dp</item>
    </style>
    <style name="Theme.AndStatus.DeviceDefault" parent="Theme.AndStatus.Min.Dark">
        <item name="andStatusActionBarTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="andStatusActionBarPopupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>
    <style name="Base.VMIN.Theme.AndStatus.Dark" parent="Theme.AndStatus.Min.Dark">
        <item name="andStatusActionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="colorPrimary">?actionBarColor</item>
        <item name="colorPrimaryDark">?actionBarColorDark</item>
        <item name="colorAccent">?actionBarColorAccent</item>
        <item name="android:colorBackground">?myBackgroundColor</item>
    </style>
    <style name="Base.Theme.AndStatus.Dark" parent="Base.VMIN.Theme.AndStatus.Dark"/>
    <style name="Theme.AndStatus.Dark" parent="Base.Theme.AndStatus.Dark"/>

    <style name="Base.VMIN.Theme.AndStatus.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="andStatusActionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="colorPrimary">?actionBarColor</item>
        <item name="colorPrimaryDark">?actionBarColorDark</item>
        <item name="colorAccent">?actionBarColorAccent</item>
        <item name="dividerColor">@color/grey_300</item>

        <item name="textColorLink">@color/link_text_dark</item>

        <item name="replyBackground">@drawable/reply_timeline_background_light</item>
        <item name="msgCountIcon">@drawable/ic_message_black_24dp</item>
        <item name="followingCountIcon">@drawable/ic_person_black_24dp</item>
        <item name="followersCountIcon">@drawable/ic_people_black_24dp</item>
        <item name="favoriteIcon">@drawable/ic_favorite_black_24dp</item>

        <item name="replyIcon">@drawable/ic_reply_black_24dp</item>
        <item name="reblogIcon">@drawable/ic_repeat_black_24dp</item>
        <item name="favoriteBorderIcon">@drawable/ic_favorite_border_black_24dp</item>
    </style>
    <style name="Base.Theme.AndStatus.Light" parent="Base.VMIN.Theme.AndStatus.Light"/>
	<style name="Theme.AndStatus.Light" parent="Base.Theme.AndStatus.Light"/>

    <!-- The theme has all attributes included and should be used in preview for Android tools -->
    <style name="Theme.AndStatus.FullyDefined" parent="Theme.AndStatus.Light">
        <item name="actionBarColor">@color/my_blue_500</item>
        <item name="actionBarColorDark">@color/my_blue_700</item>
        <item name="actionBarColorAccent">@color/my_blue_a200</item>

        <item name="messageUsernameTextAppearance">?android:attr/textAppearanceSmall</item>
        <item name="messageUsernameColor">?android:attr/textColorSecondary</item>

        <item name="messageBodyTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="messageBodyColor">?android:attr/textColorPrimaryNoDisable</item>

        <item name="messageDetailsTextAppearance">?android:attr/textAppearanceSmall</item>
        <item name="messageDetailsColor">?android:attr/textColorTertiary</item>

        <item name="sectionHeaderStyle">@style/sectionHeader</item>
    </style>
</resources>