        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/messageBodyColor</item>
        <item name="android:textColorLink">?attr/textColorLink</item>
    </style>
    <style name="messageDetailsAppearance" parent="android:Widget.TextView">
