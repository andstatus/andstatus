<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="DarkThemeSelector" parent="android:Theme.Holo" />
    <style name="LightThemeSelector" parent="android:Theme.Holo.Light" />
    <style name="DeviceDefaultThemeSelector" parent="android:Theme.DeviceDefault" />
	<style name="DialogThemeSelector" parent="android:Theme.DeviceDefault.Dialog" />
    
    <style name="WidgetStyle">
         <item name="android:background">@drawable/widget_bg</item>
    </style>
    <style name="EmptyStyle">
         <item name="android:background">#00000000</item>
    </style>
	
	<!-- http://stackoverflow.com/questions/10020466/android-4-0-sub-title-section-label-styling -->
	<style name="sectionHeader" parent="android:Widget.Holo.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:drawableBottom">@drawable/drawer_section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/messageDetailsColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
	<style name="sectionHeaderLight" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:drawableBottom">@drawable/drawer_section_header_light</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/messageDetailsColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    
	<style name="drawerListItem">
	    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">start</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>

	<!-- http://stackoverflow.com/questions/5049852/android-drawing-separator-divider-line-in-layout -->
	<style name="Divider">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">1dp</item>
	    <item name="android:paddingBottom">2dp</item>
    	<item name="android:paddingTop">2dp</item>
	    <item name="android:background">?android:attr/listDivider</item>
	</style>

    <style name="messageUsernameAppearance" parent="android:Widget.TextView">
        <item name="android:textAppearance">?attr/messageUsernameTextAppearance</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/messageUsernameColor</item>
    </style>
    <style name="messageBodyAppearance" parent="android:Widget.Holo.TextView">
        <item name="android:textAppearance">?attr/messageBodyTextAppearance</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/messageBodyColor</item>
        <item name="android:textColorLink">?attr/textColorLink</item>
    </style>
    <style name="messageDetailsAppearance" parent="android:Widget.TextView">
        <item name="android:textAppearance">?attr/messageDetailsTextAppearance</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?attr/messageDetailsColor</item>
    </style>
</resources>
